<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All feedbacks
    </h1>

    <a href="/feedbacks/new" class="btn btn-block btn-outline-secondary">
      Add a new feedback
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "feedback_templates/feedbacks_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Comments
        </th>

        <th>
          Commentor
        </th>

        <th>
          Recipient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @feedbacks.each do |feedback| %>
      <tr>
        <td>
          <%= feedback.id %>
        </td>

        <td>
          <%= feedback.comments %>
        </td>

        <td>
          <%= feedback.commentor_id %>
        </td>

        <td>
          <% if feedback.recipient.present? %>
            <a href="/users/<%= feedback.recipient.id %>">
              <%= feedback.recipient.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(feedback.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(feedback.updated_at) %> ago
        </td>

        <td>
          <a href="/feedbacks/<%= feedback.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @feedbacks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
